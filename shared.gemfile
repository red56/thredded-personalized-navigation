gem 'test_after_commit', group: :test
gem 'thredded', github: 'red56/thredded', branch: 'mark-as-unread'

if ENV['TRAVIS']
  gem 'codeclimate-test-reporter', group: :test, require: false
else
  group :development do
    gem 'guard'
    gem 'guard-rails'
    gem 'guard-livereload'
  end
end

group :debug do
  gem 'derailed'
  gem 'pry-rails'
  gem 'rack-mini-profiler'

  platform :mri do
    gem 'byebug'
    gem 'flamegraph'
    gem 'stackprof'
  end
end
