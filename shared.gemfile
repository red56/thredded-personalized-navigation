gem 'rake'
gem 'thredded', "= 0.11.1"

if ENV['TRAVIS']
  gem 'codeclimate-test-reporter', group: :test, require: false
else
  group :development do
    gem 'guard'
    gem 'guard-rails'
    gem 'guard-livereload'
  end
end

group :debug do
  gem 'derailed'
  gem 'pry-rails'
  gem 'rack-mini-profiler'

  platform :mri do
    gem 'byebug'
    gem 'flamegraph'
    gem 'stackprof'
  end
end
